{
  "name": "quizamo-mosaic-tool",
  "version": "1.5.0",
  "description": "QUIZAMO - Professional Mosaic Tool",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-mac": "electron-builder --mac",
    "build-linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never"
  },
  "keywords": [
    "mosaic",
    "image-editor",
    "privacy-tool"
  ],
  "author": "Quizamo Developer",
  "license": "MIT",
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.quizamo.mosaic",
    "productName": "QUIZAMO Mosaic Tool",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "package.json",
      "build/"
    ],
    "win": {
      "target": "dir",
      "icon": "build/icons/icon-256x256.png",
      "sign": false
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icons/icon-512x512.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build/icons/icon-256x256.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "canvas": "^3.2.0"
  }
}
